@{
    ViewData["Title"] = "Movie List"; <!--Title for the web page-->
}

@model List<MovieResponse>

<div class="text-center">
    <h1 class="display-4">All Movies</h1> <!--Heading for the web page-->
</div>
<table class="table table-bordered table-striped">
    <thead class="font-weight-bold">
        <tr>
            <td>Movie Submission ID</td>
            <td>Category</td>
            <td>Title</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Edited</td>
            <td>Lent To</td>
            <td>Notes</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var x in Model)
        {
        <tr>
            <td>@x.MovieSubmissionId</td>
            <td>@x.Category.CategoryName</td>
            <td>@x.Title</td>
            <td>@x.Year</td>
            <td>@x.Director</td>
            <td>@x.Rating</td>
            <td>@x.Edited</td>
            <td>@x.Lent_to</td>
            <td>@x.Notes</td>

            <td><a asp-controller="Home" asp-action="Edit" asp-route-MovieSubmissionId="@x.MovieSubmissionId">Edit</a></td>
            <td><a asp-controller="Home" asp-action="Delete" asp-route-MovieSubmissionId="@x.MovieSubmissionId">Delete</a></td>
        </tr>
        }
    </tbody>
</table>